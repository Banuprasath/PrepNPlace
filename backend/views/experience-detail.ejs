</head>
<body>
  <!-- <a href="/student" class="back-btn">
    <i class="fas fa-arrow-left"></i>
    Back to Experiences
  </a> -->

  <div class="container-fluid">
    <div class="main-container">
      <div class="header-section">
        <div class="header-content">
          <div class="candidate-info">
            <div class="company-badge">
              <i class="fas fa-building me-2"></i>
              <%= experience.company %>
            </div>
            <h1><%= experience.name %></h1>
            <div class="meta-info">
              <div class="meta-item">
                <i class="fas fa-envelope"></i>
                <%= experience.email %>
              </div>
              <div class="meta-item">
                <i class="fas fa-code"></i>
                <%= experience.domain %>
              </div>
              <div class="meta-item">
                <i class="fas fa-calendar"></i>
                <%= experience.year %>
              </div>
              <div class="meta-item">
                <i class="fas fa-briefcase"></i>
                <%= experience.type %>
              </div>
            </div>
          </div>
          <div>
            <a href="/experience/<%= experience._id %>/download" class="download-btn">
              <i class="fas fa-download"></i>
              Download PDF
            </a>
          </div>
        </div>
      </div>

      <div class="content-section">
        <% if (experience.skills && experience.skills.length > 0) { %>
        <div class="skills-section">
          <h3 class="skills-title">
            <i class="fas fa-tags"></i>
            Skills Used
          </h3>
          <div class="skills-list">
            <% experience.skills.forEach(skill => { %>
              <span class="skill-tag"><%= skill %></span>
            <% }) %>
          </div>
        </div>
        <% } %>

        <div class="experience-section">
          <h3 class="section-title">
            <i class="fas fa-strategy"></i>
            Preparation Strategy
          </h3>
          <div class="section-content">
            <%= experience.preparationStrategy %>
          </div>
        </div>

        <div class="experience-section">
          <h3 class="section-title">
            <i class="fas fa-handshake"></i>
            Placement Drive Experience
          </h3>
          <div class="section-content">
            <%= experience.placementExperience %>
          </div>
        </div>

        <div class="experience-section">
          <h3 class="section-title">
            <i class="fas fa-lightbulb"></i>
            Tips and Tricks
          </h3>
          <div class="section-content">
            <%= experience.tipsAndTricks %>
          </div>
        </div>

        <% if (experience.preparationPlaylist) { %>
        <div class="experience-section">
          <h3 class="section-title">
            <i class="fas fa-book"></i>
            Preparation Resources
          </h3>
          <div class="section-content">
            <%= experience.preparationPlaylist %>
          </div>
        </div>
        <% } %>

        <% if (experience.bonus) { %>
        <div class="experience-section">
          <h3 class="section-title">
            <i class="fas fa-plus-circle"></i>
            Additional Insights
          </h3>
          <div class="section-content">
            <%= experience.bonus %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  
</body>


</html>