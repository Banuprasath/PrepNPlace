<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Placement Experiences</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-custom {
      background: linear-gradient(to bottom right, rgba(27, 21, 97, 0.4), #799FBE);
      color: white;
      border: none;
      border-radius: 10px;
      transition: transform 0.3s ease;
    }
    .card-custom:hover {
      transform: scale(1.05);
    }
    .card-custom .card-body {
      padding: 1.2rem;
    }
    .icon-row {
      display: flex;
      gap: 10px;
      align-items: center;
    }
    .btn-read {
      background: white;
      color: #00416A;
      font-weight: bold;
      border-radius: 20px;
      padding: 4px 12px;
    }
    .btn-download {
      background: #FF6F61;
      color: white;
      font-weight: bold;
      border-radius: 20px;
      padding: 4px 12px;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="row g-4">
      <% experiences2.forEach(function(exp) { %>
        <div class="col-md-4">
          <div class="card card-custom">
            <div class="card-body">
              <h5><%= exp.name %></h5>
              <p class="mb-1"><strong><%= exp.company %></strong> | <%= exp.type %></p>
              <p class="mb-2"><%= exp.year %></p>
              <div class="icon-row">
                <a href="<%= exp.readLink %>" class="btn btn-sm btn-read">Read</a>
                <a href="<%= exp.downloadLink %>" class="btn btn-sm btn-download"><i class="bi bi-download"></i> Download</a>
                <a href="<%= exp.infoLink %>" class="text-white ms-auto"><i class="bi bi-info-circle"></i></a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Bootstrap Icons CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</body>
</html>
